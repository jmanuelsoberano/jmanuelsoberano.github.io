---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content, headings } = await project.render();
---

<BaseLayout 
  title={project.data.title}
  description={project.data.description}
  ogImage={project.data.heroImage}
>
  <article class="project-page">
    <div class="project-container">
      <aside class="project-sidebar">
        <div class="project-info card">
          <h2>Información</h2>
          <dl>
            <dt>Fecha</dt>
            <dd>
              {project.data.date.toLocaleDateString('es-ES', { 
                year: 'numeric', 
                month: 'long'
              })}
            </dd>
            {project.data.client && (
              <>
                <dt>Cliente</dt>
                <dd>{project.data.client}</dd>
              </>
            )}
            <dt>Stack</dt>
            <dd class="stack-list">
              {project.data.stack.map(tech => (
                <span class="tag">{tech}</span>
              ))}
            </dd>
          </dl>
          <div class="project-links">
            {project.data.externalUrl && (
              <a href={project.data.externalUrl} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
                Ver proyecto →
              </a>
            )}
            {project.data.github && (
              <a href={project.data.github} class="btn btn-secondary" target="_blank" rel="noopener noreferrer">
                GitHub
              </a>
            )}
          </div>
        </div>
        
        {headings.length > 0 && (
          <nav class="toc" aria-label="Tabla de contenidos">
            <h2>Contenido</h2>
            <ul>
              {headings.filter(h => h.depth <= 3).map(heading => (
                <li class={`depth-${heading.depth}`}>
                  <a href={`#${heading.slug}`}>{heading.text}</a>
                </li>
              ))}
            </ul>
          </nav>
        )}
      </aside>

      <div class="project-main">
        <header class="project-header">
          <a href="/proyectos" class="back-link">← Volver a proyectos</a>
          <h1>{project.data.title}</h1>
          <p class="project-description">{project.data.description}</p>
        </header>

        <div class="project-content prose">
          <Content />
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .project-page {
    padding: var(--space-8) var(--space-6);
  }
  
  .project-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    gap: var(--space-8);
  }
  
  @media (min-width: 1024px) {
    .project-container {
      grid-template-columns: 280px 1fr;
    }
    
    .project-sidebar {
      position: sticky;
      top: 100px;
      align-self: start;
    }
  }
  
  .project-info {
    margin-bottom: var(--space-6);
  }
  
  .project-info h2 {
    font-size: var(--text-sm);
    font-family: var(--font-sans);
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
  }
  
  .project-info dl {
    margin: 0;
  }
  
  .project-info dt {
    font-size: var(--text-xs);
    color: var(--text-muted);
    margin-bottom: var(--space-1);
  }
  
  .project-info dd {
    margin: 0 0 var(--space-4) 0;
    font-weight: 500;
  }
  
  .stack-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }
  
  .project-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--border);
  }
  
  .toc {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    padding: var(--space-4);
  }
  
  .toc h2 {
    font-size: var(--text-sm);
    font-family: var(--font-sans);
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-4);
  }
  
  .toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .toc li {
    margin-bottom: var(--space-2);
  }
  
  .toc li.depth-3 {
    padding-left: var(--space-4);
  }
  
  .toc a {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    text-decoration: none;
  }
  
  .toc a:hover {
    color: var(--accent);
  }
  
  .project-main {
    max-width: var(--content-wide);
  }
  
  .back-link {
    font-size: var(--text-sm);
    color: var(--text-muted);
    text-decoration: none;
    display: inline-block;
    margin-bottom: var(--space-4);
  }
  
  .back-link:hover {
    color: var(--accent);
  }
  
  .project-header {
    margin-bottom: var(--space-8);
  }
  
  .project-header h1 {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }
  
  .project-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }
  
  @media (max-width: 1023px) {
    .project-sidebar {
      order: 2;
    }
  }
</style>
